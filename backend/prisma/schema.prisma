datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id        String   @id @default(uuid())
  company   String
  email     String   @unique
  createdAt DateTime @default(now())
  updateAt  DateTime @default(now())
}

model Users {
  id        String   @id @default(uuid())
  username  String
  email     String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updateAt  DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
